        for (side in list.indices step 3){
            listTriangle.add(Triangle(list[side], list[side+1], list[side+2]))
        }
        return listTriangle
    }

    fun Triangle.possibleTriangle(): Boolean {
        return side1 + side2 > side3 && side1 + side3 > side2 && side3 + side2 > side1
